@model Teacher

<div class="container">
	<div class="card w-50 mx-auto">
		<div class="card-body">
			<h5 class="card-title mb-4 text-center">Edit Teacher</h5>
			<form asp-controller="Teacher" asp-action="Edit" enctype="multipart/form-data" method="post">
				@* Id *@
				<label asp-for="Id"></label>
				<input asp-for="Id" class="form-control mb-3 mt-2" readonly>
				@* Profile picture *@
				<label asp-for="ImageFile"></label>
				<input asp-action="Teacher" asp-for="ImageFile" type="file" class="form-control mb-3 mt-2">

				@* Name *@
				<label asp-for="Name"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-person-fill"></i></span>
					<input asp-action="Teacher" asp-for="Name" type="text" class="form-control" placeholder="Full name">
				</div>
				<span asp-validation-for="Name" class="text-danger"></span>

				@* Gender *@
				<label asp-for="Gender"></label>
				<div class="mb-3 mt-2">
					<div class="form-check form-check-inline">
						<input asp-action="Teacher" asp-for="Gender" type="radio" class="form-check-input" value="Male" id="male">
						<label class="form-check-label" for="male">Male</label>
					</div>
					<div class="form-check form-check-inline">
						<input asp-action="Teacher" asp-for="Gender" type="radio" class="form-check-input" value="Female" id="female">
						<label class="form-check-label" for="female">Female</label>
					</div>
					<div class="form-check form-check-inline">
						<input asp-action="Teacher" asp-for="Gender" type="radio" class="form-check-input" value="Other" id="other">
						<label class="form-check-label" for="other">Other</label>
					</div>
				</div>
				<span asp-validation-for="Gender" class="text-danger"></span>

				@* Designation *@
				<label asp-for="Designation"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-briefcase-fill"></i></span>
					<select asp-for="Designation" type="text" class="form-control" placeholder="Designation">
						<option value="">Select Designation</option>
						<option value="Assistant Lecturer">Assistant Lecturer</option>
						<option value="Lecturer">Lecturer</option>
						<option value="Assistant Professor">Assistant Professor</option>
						<option value="Associate Professor">Associate Professor</option>
						<option value="Professor">Professor</option>
						<option value="Dept. Head">Dept. Head</option>
					</select>
				</div>
				<span asp-validation-for="Designation" class="text-danger"></span>

				@* Department *@
				<label asp-for="Department"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-book-half"></i></span>
					<select asp-for="Department" type="text" class="form-control" placeholder="Department">
						<option value="">Select Department</option>
						<option value="CSE">CSE</option>
						<option value="EEE">ECE</option>
						<option value="BBA">BBA</option>
						<option value="BBA">AMT</option>
						<option value="BBA">KMT</option>
						<option value="BBA">FDT</option>
					</select>
				</div>
				<span asp-validation-for="Department" class="text-danger"></span>

				@* Email *@
				<label asp-for="Email"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-envelope"></i></span>
					<input asp-action="Teacher" asp-for="Email" type="text" class="form-control" placeholder="Email">
				</div>

				@* Phone *@
				<label asp-for="Phone"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
					<input asp-action="Teacher" asp-for="Phone" type="text" class="form-control" placeholder="Phone">
				</div>
				<span asp-validation-for="Phone" class="text-danger"></span>

				@* Joining Date *@
				<label asp-for="JoiningDate"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
					<input asp-action="Teacher" asp-for="JoiningDate" type="date" class="form-control" placeholder="Joining Date">
				</div>
				<span asp-validation-for="JoiningDate" class="text-danger"></span>

				@* Qualification *@
				<label asp-for="Qualification"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-award-fill"></i></span>
					<select asp-for="Qualification" type="text" class="form-control" placeholder="Qualification">
						<option value="">Select Qualification</option>
						<option value="BSc">BSc</option>
						<option value="MSc">MSc</option>
						<option value="MBA">MBA</option>
						<option value="PhD">PhD</option>
						<option value="Post Doc">Post Doc</option>
					</select>
				</div>
				<span asp-validation-for="Qualification" class="text-danger"></span>

				@* Leaving Date *@
				<label asp-for="LeavingDate"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
					<input asp-action="Teacher" asp-for="LeavingDate" type="date" class="form-control" placeholder="Leaving Date">
				</div>

				@* Address *@
				<label asp-for="Address"></label>
				<div class="input-group mb-3 mt-2">
					<span class="input-group-text"><i class="bi bi-house-door-fill"></i></span>
					<textarea asp-for="Address" class="form-control" placeholder="Present Address"></textarea>
				</div>

				@* Submit button *@
				<div class="d-grid col-6 mx-auto">
					<button class="btn btn-primary" type="submit">Update Teacher</button>
				</div>
			</form>
		</div>
	</div>
</div>