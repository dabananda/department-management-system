@model List<Department>

<div class="container">
	<div class="my-4 d-flex justify-content-between">
		<h3 class="mb-0">DEPARTMENTS</h3>
		<a asp-controller="Department" asp-action="Create" class="btn btn-success">
			<i class="bi bi-plus-circle"></i> ADD DEPARTMENT
		</a>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Department Name</th>
				<th>Description</th>
				<th>Established In</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Website</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var department in Model)
			{
				<tr>
					<td>@department.DepartmentName</td>
					<td>@department.Description</td>
					<td>@department.EstablishedDate</td>
					<td>@department.DepartmentPhone</td>
					<td>@department.DepartmentEmail</td>
					<td>@department.DepartmentWebsite</td>
					<td>
						<a asp-controller="Department" asp-action="Edit" class="btn btn-sm btn-primary me-2" asp-route-id="@department.Id">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Department" asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@department.Id">
							<i class="bi bi-trash"></i> Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>